{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.yuli.doculy.ai/v1/common/buffer-distance.schema.json",
  "title": "Buffer Distance Schema",
  "description": "Buffer distance definitions for geographic operations",
  "$defs": {
    "bufferDistance": {
      "type": "string",
      "pattern": "^\\d+(\\.\\d+)?\\s*(mi|km|m|ft|miles?|kilometers?|meters?|feet)?$",
      "description": "Distance with unit (e.g., '5 mi', '10 km', '500 m')",
      "examples": ["5 mi", "10 km", "500 m", "1000 ft"]
    },
    "bufferDistanceArray": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/bufferDistance"
      },
      "description": "Array of buffer distances"
    }
  }
}
