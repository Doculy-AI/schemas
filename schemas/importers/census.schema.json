{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.yuli.doculy.ai/v1/importers/census.schema.json",
  "title": "Census Importer Configuration",
  "description": "Configuration for importing TIGER/Line census geography data",
  "type": "object",
  "x-parcell": {
    "service": "census",
    "action": "import"
  },
  "required": ["state", "datatype"],
  "properties": {
    "parcell": {
      "$ref": "../common/base.schema.json#/$defs/parcell"
    },
    "state": {
      "$ref": "../common/state.schema.json#/$defs/stateCode",
      "description": "Two-letter US state code"
    },
    "datatype": {
      "type": "string",
      "description": "Type of census geography to import",
      "enum": [
        "place",
        "block",
        "census_block",
        "tract",
        "census_tract",
        "county",
        "block_group",
        "state",
        "cbsa",
        "csa",
        "congressional_district",
        "school_district_elementary",
        "school_district_secondary",
        "school_district_unified",
        "zip_code_tabulation_area",
        "urban_area"
      ]
    },
    "censusYear": {
      "type": "integer",
      "description": "Census TIGER/Line data year",
      "minimum": 2010,
      "maximum": 2030,
      "default": 2023
    },
    "tableYear": {
      "type": "integer",
      "description": "Year suffix for destination table name",
      "minimum": 2010,
      "maximum": 2030
    },
    "dataDir": {
      "type": "string",
      "description": "Directory for downloaded data files"
    },
    "buffers": {
      "type": "array",
      "description": "Buffer distances to generate around geometries",
      "items": {
        "type": "string",
        "pattern": "^\\d+(\\.\\d+)?\\s*(mi|km|m|ft)$"
      },
      "examples": [["5 mi", "10 mi", "15 mi"]]
    },
    "keepStaging": {
      "type": "boolean",
      "description": "Keep staging tables after import",
      "default": false
    }
  },
  "additionalProperties": false
}
