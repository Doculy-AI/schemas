{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Doculy-AI/schemas/main/schemas/importers/census.schema.json",
  "title": "Census Importer Configuration",
  "description": "Configuration for importing TIGER/Line census geography data",
  "type": "object",
  "required": ["state", "datatype"],
  "properties": {
    "state": {
      "type": "string",
      "description": "Two-letter US state code",
      "enum": [
        "AL", "AK", "AZ", "AR", "CA", "CO", "CT", "DE", "FL", "GA",
        "HI", "ID", "IL", "IN", "IA", "KS", "KY", "LA", "ME", "MD",
        "MA", "MI", "MN", "MS", "MO", "MT", "NE", "NV", "NH", "NJ",
        "NM", "NY", "NC", "ND", "OH", "OK", "OR", "PA", "RI", "SC",
        "SD", "TN", "TX", "UT", "VT", "VA", "WA", "WV", "WI", "WY",
        "DC", "PR", "VI", "GU", "AS", "MP"
      ]
    },
    "datatype": {
      "type": "string",
      "description": "Type of census geography to import",
      "enum": ["tract", "place", "block", "county", "block_group", "zcta"]
    },
    "censusYear": {
      "type": "integer",
      "description": "Census TIGER/Line data year",
      "minimum": 2010,
      "maximum": 2030,
      "default": 2023
    },
    "tableYear": {
      "type": "integer",
      "description": "ACS table data year",
      "minimum": 2010,
      "maximum": 2030
    },
    "buffers": {
      "type": "array",
      "description": "Buffer distances to generate around geometries",
      "items": {
        "type": "string",
        "pattern": "^\\d+(\\.\\d+)?\\s*(mi|km|m|ft)$"
      },
      "examples": [["5 mi", "10 mi", "15 mi"]]
    },
    "keepStaging": {
      "type": "boolean",
      "description": "Keep staging tables after import",
      "default": false
    }
  },
  "additionalProperties": false
}
