{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.yuli.doculy.ai/v1/importers/schools.schema.json",
  "title": "Schools Importer Configuration",
  "description": "Configuration for importing school location data from GreatSchools API",
  "type": "object",
  "x-parcell": {
    "service": "schools",
    "action": "import"
  },
  "required": ["state"],
  "properties": {
    "state": {
      "$ref": "../common/state.schema.json#/$defs/stateCode",
      "description": "Two-letter US state code"
    },
    "year": {
      "type": "integer",
      "description": "Year suffix for table naming",
      "minimum": 2020,
      "maximum": 2030
    },
    "buffer": {
      "type": "array",
      "description": "Buffer distances to generate around school locations",
      "items": {
        "type": "string",
        "pattern": "^\\d+(\\.\\d+)?\\s*(mi|km|m|ft)$"
      },
      "examples": [["0.5 mi", "1 mi", "2 mi"]]
    },
    "clear": {
      "type": "boolean",
      "description": "Clear existing data before import",
      "default": false
    }
  },
  "additionalProperties": false
}
