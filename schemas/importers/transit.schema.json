{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.yuli.doculy.ai/v1/importers/transit.schema.json",
  "title": "GTFS Transit Importer Configuration",
  "description": "Configuration for importing GTFS transit data from Mobility Data API",
  "type": "object",
  "x-parcell": {
    "service": "transit",
    "action": "import"
  },
  "required": [
    "state"
  ],
  "properties": {
    "parcell": {
      "type": "object",
      "description": "Parcell CLI metadata for service routing",
      "required": [
        "service",
        "action"
      ],
      "properties": {
        "service": {
          "type": "string",
          "description": "Target service name"
        },
        "action": {
          "type": "string",
          "description": "Action to perform"
        }
      },
      "additionalProperties": false
    },
    "state": {
      "type": "string",
      "description": "Two-letter US state code",
      "enum": [
        "AL",
        "AK",
        "AZ",
        "AR",
        "CA",
        "CO",
        "CT",
        "DE",
        "FL",
        "GA",
        "HI",
        "ID",
        "IL",
        "IN",
        "IA",
        "KS",
        "KY",
        "LA",
        "ME",
        "MD",
        "MA",
        "MI",
        "MN",
        "MS",
        "MO",
        "MT",
        "NE",
        "NV",
        "NH",
        "NJ",
        "NM",
        "NY",
        "NC",
        "ND",
        "OH",
        "OK",
        "OR",
        "PA",
        "RI",
        "SC",
        "SD",
        "TN",
        "TX",
        "UT",
        "VT",
        "VA",
        "WA",
        "WV",
        "WI",
        "WY",
        "DC",
        "PR",
        "VI",
        "GU",
        "AS",
        "MP"
      ]
    },
    "year": {
      "type": "integer",
      "description": "Year suffix for table naming",
      "minimum": 2020,
      "maximum": 2030
    },
    "mobilityKey": {
      "type": "string",
      "description": "Mobility Data API key (defaults to MOBILITY_KEY env var)"
    },
    "clear": {
      "type": "boolean",
      "description": "Clear existing data before import",
      "default": false
    },
    "force": {
      "type": "boolean",
      "description": "Force update all feeds regardless of last import time",
      "default": false
    },
    "agencies": {
      "type": "array",
      "description": "Specific agency IDs to import (imports all if not specified)",
      "items": {
        "type": "string"
      }
    },
    "buffer": {
      "type": "array",
      "description": "Buffer distances to generate around transit stops",
      "items": {
        "type": "string",
        "pattern": "^\\d+(\\.\\d+)?\\s*(mi|km|m|ft)$"
      },
      "examples": [
        [
          "0.25 mi",
          "0.5 mi",
          "1 mi"
        ]
      ]
    },
    "jobs": {
      "type": "integer",
      "description": "Number of parallel jobs for downloading feeds",
      "minimum": 1,
      "maximum": 10,
      "default": 4
    },
    "retries": {
      "type": "integer",
      "description": "Maximum retries for failed downloads",
      "minimum": 0,
      "maximum": 10,
      "default": 3
    }
  },
  "additionalProperties": false
}