{
  "name": "@doculy-ai/schemas",
  "version": "1.0.0",
  "description": "JSON schemas for Yuli configuration validation",
  "private": true,
  "scripts": {
    "validate": "ajv compile -s 'schemas/**/*.schema.json' -c ajv-formats --strict=true",
    "build": "npm run validate",
    "test": "npm run validate"
  },
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1"
  },
  "engines": {
    "node": ">=18"
  }
}
